[Unit]
Description=Script Python for monitoring 
After=multi-user.target network.target

[Service]
Type=simple
Restart=on-failure 
RestartSec=1
User=bugny
ExecStart=/home/bugny/Documents/opcua/venv/bin/python /home/bugny/Documents/opcua/monitoring.py
StandardError=append:/home/bugny/Documents/opcua/monitoring.log 

[Install]
WantedBy=multi-user.target